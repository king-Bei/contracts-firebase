{
  "hosting": {
    "public": "hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/api/**", "function": "api" },
      { "source": "/web/**", "function": "web" },
      { "source": "/sign/**", "destination": "/sign.html" },
      { "source": "**", "destination": "/login.html" }
    ]
  },
  "functions": {
    "source": "functions",
    "predeploy": [
    "npm --prefix \"$RESOURCE_DIR\" ci || npm --prefix \"$RESOURCE_DIR\" i"
    ]
    },
  "firestore": { "rules": "firestore.rules" },
  "storage": { "rules": "storage.rules" }
}
