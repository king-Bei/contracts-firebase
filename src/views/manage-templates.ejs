<%- include('partials/header') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>合約範本管理</h1>
        <a href="/admin/templates/new" class="btn btn-primary">建立新範本</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">現有範本</h5>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">範本名稱</th>
                        <th scope="col">操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (templates && templates.length > 0) { %>
                        <% templates.forEach((template, index) => { %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= template.name %></td>
                                <td>
                                    <a href="/admin/templates/edit/<%= template.id %>" class="btn btn-sm btn-outline-secondary">編輯</a>
                                    <!-- 新增刪除按鈕，可根據需求實作 -->
                                    <!-- <button class="btn btn-sm btn-outline-danger">刪除</button> -->
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="text-center">尚未建立任何範本。</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
