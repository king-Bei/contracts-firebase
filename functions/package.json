{
  "name": "contracts-firebase-functions",
  "version": "5.1.0",
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "serve": "firebase emulators:start --only functions,hosting,firestore,storage",
    "deploy": "firebase deploy",
    "postinstall": "npx playwright install --with-deps chromium || echo \"skip playwright\"",
    "test": "npm run test:unit",
    "test:unit": "mocha \"test/**/*.test.js\" --timeout 15000",
    "test:watch": "npm run test:unit -- --watch",
    "emulators:test": "firebase emulators:exec --only functions \"npm run test:unit\""
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^6.4.0",
    "googleapis": "^133.0.0",
    "nanoid": "^5.0.7",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.47.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "chai": "^5.1.1",
    "mocha": "^10.7.0",
    "supertest": "^7.0.0"
  }
}
