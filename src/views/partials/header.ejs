<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-light">
  <div class="container py-4 anim-fade-up">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <% if (typeof user !=='undefined' && user) { %>
              <% if (user.role==='admin' || user.can_manage_users || user.can_view_all_contracts) { %>
                <li class="nav-item">
                  <a class="nav-link" href="/admin">管理後台</a>
                </li>
                <% } %>
                  <% if (user.role==='admin' || user.is_manager) { %>
                    <li class="nav-item">
                      <a class="nav-link" href="/manager/dashboard">主管審核</a>
                    </li>
                    <% } %>
                      <% if (user.role==='admin' || user.is_sales) { %>
                        <li class="nav-item">
                          <a class="nav-link" href="/sales">業務專區</a>
                        </li>
                        <% } %>
                          <% } %>
          </ul>
        </div>
      </div>
    </nav>